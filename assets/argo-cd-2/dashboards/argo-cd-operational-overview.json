                  "desc": false,
                  "displayName": "Application"
               }
            ]
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(\n  argocd_app_info{\n    cluster=\"$cluster\",\nnamespace=~\"$namespace\",\njob=~\"$job\"\n\n,\ndest_server=~\"$kubernetes_cluster\",\nproject=~\"$project\"\n\n  }\n) by (job, dest_server, project, name, health_status, sync_status)\n",
               "format": "table",
               "instant": true
            }
         ],
         "title": "Applications",
         "transformations": [
            {
               "id": "organize",
               "options": {
                  "excludeByName": {
                     "Time": true,
                     "Value": true,
                     "dest_server": true,
                     "job": true
                  },
                  "indexByName": {
                     "health_status": 2,
                     "name": 0,
                     "project": 1,
                     "sync_status": 3
                  },
                  "renameByName": {
                     "dest_server": "Kubernetes Cluster",
                     "health_status": "Health Status",
                     "job": "Job",
                     "name": "Application",
                     "project": "Project",
                     "sync_status": "Sync Status"
                  }
               }
            }
         ],
         "type": "table"
      },
      {
