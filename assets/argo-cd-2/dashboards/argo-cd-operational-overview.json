{
   "__inputs": [ ],
   "__requires": [ ],
   "annotations": {
      "list": [ ]
   },
   "description": "A dashboard that monitors ArgoCD with a focus on the operational side of ArgoCD. The dashboards were generated using [argo-cd-mixin](https://github.com/adinhodovic/argo-cd-mixin). Open issues and create feature requests in the repository.",
   "editable": false,
   "links": [
      {
         "asDropdown": true,
         "includeVars": false,
         "keepTime": true,
         "tags": [
            "ci/cd",
            "argo-cd"
         ],
         "targetBlank": true,
         "title": "ArgoCD",
         "type": "dashboards"
      }
   ],
   "panels": [
      {
         "collapsed": false,
         "gridPos": {
            "h": 1,
            "w": 24,
            "x": 0,
            "y": 0
         },
         "id": 1,
         "title": "Summary",
         "type": "row"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The total number of clusters being managed by ArgoCD.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            },
            "overrides": [ ]
         },
         "gridPos": {
            "h": 4,
            "w": 4,
            "x": 0,
            "y": 1
         },
         "id": 2,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(\n  argocd_cluster_info{\n    cluster=\"$cluster\",\nnamespace=~\"$namespace\",\njob=~\"$job\"\n\n\n  }\n)\n",
               "instant": false
            }
         ],
         "title": "Clusters",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The total number of Git repositories being monitored by ArgoCD.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            },
            "overrides": [ ]
         },
         "gridPos": {
            "h": 4,
            "w": 4,
            "x": 4,
            "y": 1
         },
         "id": 3,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "count(\n  count(\n    argocd_app_info{\n      cluster=\"$cluster\",\nnamespace=~\"$namespace\",\njob=~\"$job\"\n\n\n    }\n  )\n  by (repo)\n)\n",
               "instant": false
            }
         ],
         "title": "Repositories",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The total number of applications being managed by ArgoCD.",
         "fieldConfig": {
            "defaults": {
               "mappings": [ ],
               "thresholds": {
                  "steps": [
                     {
                        "color": "green",
                        "value": 0
                     }
                  ]
               },
               "unit": "short"
            },
            "overrides": [ ]
         },
         "gridPos": {
            "h": 4,
            "w": 4,
            "x": 8,
            "y": 1
         },
         "id": 4,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(\n  argocd_app_info{\n    cluster=\"$cluster\",\nnamespace=~\"$namespace\",\njob=~\"$job\"\n\n,\ndest_server=~\"$kubernetes_cluster\",\nproject=~\"$project\"\n\n  }\n)\n",
               "instant": false
            }
         ],
         "title": "Applications",
         "type": "stat"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "The distribution of application health statuses managed by ArgoCD.",
         "fieldConfig": {
            "defaults": {
               "unit": "short"
            },
            "overrides": [
               {
                  "matcher": {
                     "id": "byName",
                     "options": "Synced"
                  },
                  "properties": [
                     {
                        "id": "color",
                        "value": {
                           "fixedColor": "green",
                           "mode": "fixed"
                        }
                     }
                  ]
               },
               {
                  "matcher": {
                     "id": "byName",
                     "options": "OutOfSync"
                  },
                  "properties": [
                     {
                        "id": "color",
                        "value": {
                           "fixedColor": "red",
                           "mode": "fixed"
                        }
                     }
                  ]
               },
               {
                  "matcher": {
                     "id": "byName",
                     "options": "Unknown"
                  },
                  "properties": [
                     {
                        "id": "color",
                        "value": {
                           "fixedColor": "yellow",
                           "mode": "fixed"
                        }
                     }
                  ]
               }
            ]
         },
         "gridPos": {
            "h": 6,
            "w": 6,
            "x": 0,
            "y": 5
         },
         "id": 5,
         "options": {
            "displayLabels": [
               "percent"
            ],
            "legend": {
               "displayMode": "table",
               "placement": "right",
               "showLegend": true,
               "values": [
                  "percent"
               ]
            },
            "tooltip": {
               "mode": "multi",
               "sort": "desc"
            }
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "$datasource"
               },
               "expr": "sum(\n  argocd_app_info{\n    cluster=\"$cluster\",\nnamespace=~\"$namespace\",\njob=~\"$job\"\n\n,\ndest_server=~\"$kubernetes_cluster\",\nproject=~\"$project\"\n\n  }\n) by (health_status)\n",
               "instant": true,
               "legendFormat": "{{ health_status }}"
            }
         ],
         "title": "Health Status",
         "type": "piechart"
      },
      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
