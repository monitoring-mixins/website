      {
         "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
         },
         "description": "A table listing all applications managed by ArgoCD, along with their health and sync statuses.",
         "fieldConfig": {
            "defaults": {
               "links": [
                  {
                     "targetBlank": true,
                     "title": "Go To Application",
