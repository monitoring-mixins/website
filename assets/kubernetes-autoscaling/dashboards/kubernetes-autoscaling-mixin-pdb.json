            {
               "id": "merge"
            },
            {
               "id": "organize",
               "options": {
                  "excludeByName": {
                     "Time": true,
                     "job": true
                  },
                  "indexByName": {
                     "Value #A": 2,
                     "Value #B": 3,
                     "Value #C": 4,
                     "Value #D": 5,
                     "namespace": 0,
                     "poddisruptionbudget": 1
